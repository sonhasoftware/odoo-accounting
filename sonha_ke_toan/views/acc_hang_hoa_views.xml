<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_acc_hang_hoa_tree" model="ir.ui.view">
        <field name="name">acc.hang.hoa.tree</field>
        <field name="model">acc.hang.hoa</field>
        <field name="arch" type="xml">
            <tree string="Danh mục hàng hóa" editable="bottom" decoration-danger="CAP == 1" decoration-bf="CAP == 1">
                <field name="CAP" optional="show"/>
                <field name="MA" optional="show"/>
                <field name="TEN" optional="show"/>
                <field name="DVT" optional="show"/>
                <field name="HS_QUY_DOI" optional="show"/>
                <field name="DINH_MUC" optional="show"/>
                <field name="TK_KHO_ID" optional="show"/>
                <field name="TK_GV_ID" optional="show"/>
                <field name="TK_DT_ID" optional="show"/>
                <field name="LOAI_HH" optional="show"/>
                <field name="CHINH_PHU" optional="show"/>
                <field name="SL_MIN" optional="show"/>
                <field name="HANG_HOA" optional="show"/>
                <field name="SAN_PHAM" optional="show"/>
                <field name="DVCS" optional="show"/>
                <field name="ACTIVE" optional="show"/>
                <field name="create_uid" string="Người tạo" optional="hide" class="check_cr"/>
                <field name="write_uid" string="Người sửa" optional="hide" class="check_wt"/>
                <field name="create_date" string="Ngày tạo" optional="hide" class="check_cd"/>
                <field name="write_date" string="Ngày sửa" optional="hide" class="check_wd"/>
            </tree>
        </field>
    </record>

    <record id="acc_hang_hoa_action" model="ir.actions.act_window">
        <field name="name">Danh mục hàng hóa</field>
        <field name="res_model">acc.hang.hoa</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>