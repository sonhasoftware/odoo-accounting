<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_acc_tien_te_tree" model="ir.ui.view">
        <field name="name">acc.tien.te.tree</field>
        <field name="model">acc.tien.te</field>
        <field name="arch" type="xml">
            <tree string="Danh mục tiền tệ" editable="bottom" decoration-danger="CAP == 1" decoration-bf="CAP == 1">
                <field name="CAP" optional="show"/>
                <field name="MA" optional="show"/>
                <field name="TEN" optional="show"/>
                <field name="TY_GIA" optional="show"/>
                <field name="NGAY_AP_DUNG" optional="show"/>
                <field name="TIEN_TE" optional="show"/>
                <field name="DVCS" optional="show"/>
                <field name="ACTIVE" optional="show"/>
                <field name="create_uid" string="Người tạo" optional="hide"/>
                <field name="write_uid" string="Người sửa" optional="hide"/>
                <field name="create_date" string="Ngày tạo" optional="hide"/>
                <field name="write_date" string="Ngày sửa" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="acc_tien_te_action" model="ir.actions.act_window">
        <field name="name">Danh mục tiền tệ</field>
        <field name="res_model">acc.tien.te</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>