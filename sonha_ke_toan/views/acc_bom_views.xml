<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_acc_bom_tree" model="ir.ui.view">
        <field name="name">acc.bom.tree</field>
        <field name="model">acc.bom</field>
        <field name="arch" type="xml">
            <tree string="Danh mục BOM" editable="bottom">
                <field name="SAN_PHAM" optional="show"/>
                <field name="SAN_PHAM_NAME" optional="show"/>
                <field name="HANG_HOA" optional="show"/>
                <field name="HANG_HOA_NAME" optional="show"/>
                <field name="SO_LUONG" optional="show"/>
                <field name="SLDM" optional="show"/>
                <field name="LOAI_DM" optional="show"/>
                <field name="DVCS" optional="show"/>
                <field name="ACTIVE" optional="show"/>
                <field name="create_uid" string="Người tạo" optional="hide"/>
                <field name="write_uid" string="Người sửa" optional="hide"/>
                <field name="create_date" string="Ngày tạo" optional="hide"/>
                <field name="write_date" string="Ngày sửa" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="acc_bom_action" model="ir.actions.act_window">
        <field name="name">Danh mục BOM</field>
        <field name="res_model">acc.bom</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>