<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_acc_tscd_tree" model="ir.ui.view">
        <field name="name">acc.tscd.tree</field>
        <field name="model">acc.tscd</field>
        <field name="arch" type="xml">
            <tree string="Danh mục TSCĐ/CCDC" editable="bottom" decoration-danger="CAP == 1" decoration-bf="CAP == 1">
                <field name="CAP" optional="show"/>
                <field name="MA" optional="show"/>
                <field name="TEN" optional="show"/>
                <field name="DVT" optional="show"/>
                <field name="NGAY_SD" optional="show"/>
                <field name="NUOC_SX" optional="show"/>
                <field name="NOI_SX" optional="show"/>
                <field name="SO_LUONG" optional="show"/>
                <field name="TIEU_THUC" optional="show"/>
                <field name="TONG_KH" optional="show"/>
                <field name="TK_KHNO_ID" optional="show"/>
                <field name="TK_KHCO_ID" optional="show"/>
                <field name="KHOAN_MUC" optional="show"/>
                <field name="BO_PHAN" optional="show"/>
                <field name="LOAI_PX" optional="show"/>
                <field name="VVIEC" optional="show"/>
                <field name="CONLAI_VND" optional="show"/>
                <field name="TSCD" optional="show"/>
                <field name="DVCS" optional="show"/>
                <field name="ACTIVE" optional="show"/>
                <field name="create_uid" string="Người tạo" optional="hide" class="check_cr"/>
                <field name="write_uid" string="Người sửa" optional="hide" class="check_wt"/>
                <field name="create_date" string="Ngày tạo" optional="hide" class="check_cd"/>
                <field name="write_date" string="Ngày sửa" optional="hide" class="check_wd"/>
            </tree>
        </field>
    </record>

    <record id="acc_tscd_action" model="ir.actions.act_window">
        <field name="name">Danh mục TSCĐ/CCDC</field>
        <field name="res_model">acc.tscd</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>