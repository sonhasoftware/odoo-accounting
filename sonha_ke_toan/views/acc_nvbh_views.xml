<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_acc_nvbh_tree" model="ir.ui.view">
        <field name="name">acc.nvbh.tree</field>
        <field name="model">acc.nvbh</field>
        <field name="arch" type="xml">
            <tree string="Danh mục NVBH" editable="bottom" decoration-danger="CAP == 1" decoration-bf="CAP == 1">
                <field name="CAP" optional="show"/>
                <field name="MA" optional="show"/>
                <field name="TEN" optional="show"/>
                <field name="NVBH" optional="show"/>
                <field name="QL_NVBH" optional="show"/>
                <field name="DVCS" optional="show"/>
                <field name="ACTIVE" optional="show"/>
                <field name="create_uid" string="Người tạo" optional="hide"/>
                <field name="write_uid" string="Người sửa" optional="hide"/>
                <field name="create_date" string="Ngày tạo" optional="hide"/>
                <field name="write_date" string="Ngày sửa" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="acc_nvbh_action" model="ir.actions.act_window">
        <field name="name">Danh mục NVBH</field>
        <field name="res_model">acc.nvbh</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>