<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_acc_san_pham_tree" model="ir.ui.view">
        <field name="name">acc.san.pham.tree</field>
        <field name="model">acc.san.pham</field>
        <field name="arch" ty8pe="xml">
            <tree string="Danh mục sẩn phẩm" editable="bottom" decoration-danger="CAP == 1" decoration-bf="CAP == 1">
                <field name="CAP"/>
                <field name="MA"/>
                <field name="TEN"/>
                <field name="DVT"/>
                <field name="SPCAP"/>
                <field name="LOAI_SP"/>
                <field name="DINH_MUC"/>
                <field name="HANG_HOA"/>
                <field name="SAN_PHAM"/>
                <field name="DVCS"/>
                <field name="ACTIVE"/>
                <field name="create_uid" string="Người tạo" optional="hide" class="check_cr"/>
                <field name="write_uid" string="Người sửa" optional="hide" class="check_wt"/>
                <field name="create_date" string="Ngày tạo" optional="hide" class="check_cd"/>
                <field name="write_date" string="Ngày sửa" optional="hide" class="check_wd"/>
            </tree>
        </field>
    </record>

    <record id="acc_san_pham_action" model="ir.actions.act_window">
        <field name="name">Danh mục sản phẩm</field>
        <field name="res_model">acc.san.pham</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>