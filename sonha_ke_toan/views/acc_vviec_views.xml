<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_acc_vviec_tree" model="ir.ui.view">
        <field name="name">acc.vviec.tree</field>
        <field name="model">acc.vviec</field>
        <field name="arch" type="xml">
            <tree string="Danh mục vụ việc" editable="bottom" decoration-danger="CAP == 1" decoration-bf="CAP == 1">
                <field name="CAP" optional="show"/>
                <field name="MA" optional="show"/>
                <field name="TEN" optional="show"/>
                <field name="TU_NGAY" optional="show"/>
                <field name="DEN_NGAY" optional="show"/>
                <field name="SO_TIEN" optional="show"/>
                <field name="NGAY_KY" optional="show"/>
                <field name="LOAIHD" optional="show"/>
                <field name="VVIEC" optional="show"/>
                <field name="DVCS" optional="show"/>
                <field name="ACTIVE" optional="show"/>
                <field name="create_uid" string="Người tạo" optional="hide" class="check_cr"/>
                <field name="write_uid" string="Người sửa" optional="hide" class="check_wt"/>
                <field name="create_date" string="Ngày tạo" optional="hide" class="check_cd"/>
                <field name="write_date" string="Ngày sửa" optional="hide" class="check_wd"/>
            </tree>
        </field>
    </record>

    <record id="acc_vviec_action" model="ir.actions.act_window">
        <field name="name">Danh mục vụ việc</field>
        <field name="res_model">acc.vviec</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>