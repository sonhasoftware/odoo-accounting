<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_popup_change_field_form" model="ir.ui.view">
        <field name="name">popup.change.field.form</field>
        <field name="model">popup.change.field</field>
        <field name="arch" type="xml">
            <form string="Sửa giá trị">
                <group>
                    <field name="value"/>
                </group>
                <footer>
                    <button string="Xác nhận" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Hủy" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="popup_change_field_action" model="ir.actions.act_window">
        <field name="name">Sửa giá trị</field>
        <field name="res_model">popup.change.field</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>