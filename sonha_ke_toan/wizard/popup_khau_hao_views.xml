<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_popup_khau_hao_form" model="ir.ui.view">
        <field name="name">popup.khau.hao.form</field>
        <field name="model">popup.khau.hao</field>
        <field name="arch" type="xml">
            <form string="Khấu hao TSCĐ/CCDC">
                <group>
                    <group>
                        <field name="thang"/>
                    </group>
                    <group>
                        <field name="nam"/>
                    </group>
                </group>
                <footer>
                    <button string="Xử lý" type="object" name="action_handle" class="oe_highlight"/>
                    <button string="Xem" type="object" name="action_view" class="oe_highlight"/>
                    <button string="Hủy" type="object" class="oe_highlight" name="action_cancel" confirm="Bạn có chắc chắn muốn hủy khấu hao không?"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="khau_hao_action" model="ir.actions.act_window">
        <field name="name">Khấu hao TSCĐ/CCDC</field>
        <field name="res_model">popup.khau.hao</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>