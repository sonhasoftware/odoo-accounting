<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_thong_bao_wizard_form" model="ir.ui.view">
        <field name="name">thong.bao.wizard.form</field>
        <field name="model">thong.bao.wizard</field>
        <field name="arch" type="xml">
            <form string="Thông báo" class="form-thong-bao">
                <sheet>
                    <field name="TIEU_DE" style="font-size: 1.2rem;" readonly="1"/>
                    <field name="NOI_DUNG" widget="text" rows="8" readonly="1"/>
                </sheet>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="thong_bao_wizard_action" model="ir.actions.act_window">
        <field name="name">Thông báo</field>
        <field name="res_model">thong.bao.wizard</field>
        <field name="view_mode">form</field>
    </record>

</odoo>