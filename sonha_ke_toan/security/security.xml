<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="rule_acc_tai_khoan_company_current" model="ir.rule">
        <field name="name">acc.tai.khoan - only current company</field>
        <field name="model_id" ref="model_acc_tai_khoan"/>
        <field name="domain_force">[('DVCS', '=', company_id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record model="ir.module.category" id="sonha_accounting_security">
        <field name="name">Kế toán</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_admin_account" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="sonha_accounting_security"/>
    </record>
</odoo>