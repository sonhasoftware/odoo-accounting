<odoo>
    <record id="view_field_confirm_tree" model="ir.ui.view">
        <field name="name">field.confirm.config.tree</field>
        <field name="model">field.confirm.config</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="model_id"/>
                <field name="field_id"/>
                <field name="require_confirm"/>
            </tree>
        </field>
    </record>

    <record id="action_field_confirm_config" model="ir.actions.act_window">
        <field name="name">Field Confirm Config</field>
        <field name="res_model">field.confirm.config</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_confirm_config"
              name="Xác nhận trường"
              parent="menu_sonha_phan_quyen_user"
              action="action_field_confirm_config"
              sequence="3"/>


</odoo>